module Workarea
  decorate Storefront::CartViewModel, with: :package_products do
    def bundled_items
      @bundled_items ||= Storefront::CartItemViewModel.wrap(model.bundled_items)
    end

    def bundled_items_for(item_id)
      bundled_items.select { |i| i.bundle_item_id == item_id.to_s }
    end
  end
end
